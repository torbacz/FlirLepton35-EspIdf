		range 0 50
		default 3
		help
			The SDL pin for I2C connection.

	config LEPTON_SCL_PIN
		int "SCL pin"
		range 0 50
		default 4
		help
			The SCL pin for I2C connection.

	config LEPTON_POWER_PIN
		int "Power pin"
		range 0 50
		default 10
		help
